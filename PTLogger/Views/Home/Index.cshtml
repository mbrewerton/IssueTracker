@model PTLogger.Models.UserStoryModel
@{
    ViewBag.Title = "Create an Issue";
}
<h2>Create an Issue</h2>
<h3>Please give as much detail as possible including steps to recreate
    and if possible screenshots of errors</h3>
</ br></ br>
</ br></ br>
@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Issue Summary</label>
    @Html.TextBoxFor(model => model.Name)

    <label>Detailed Description</label>
    @Html.TextAreaFor(model => model.Description)

    <div id="multiple">
        <input type="file" class="multiple" name="files" multiple />
    </div>

    <button class="btn btn-default" type="submit">Submit</button>
}



